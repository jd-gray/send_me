<div class="col-md-6 col-md-offset-3">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h1>Log In</h1>
		</div>
		<div class="panel-body">
			<%= simple_form_for :login do |f| %>
				<%= f.input :email, placeholder: "Email", required: true %>
				<%= f.input :password, placeholder: "Password", input_html: { maxlength: 20 } %>
				<%= f.button :submit %>
			<% end %>
			<%= button_to "Back", root_path, :class => "button-primary", :method => :get  %>
		</div>
	</div>
</div>
<div class="col-md-12 col-md-offset">
    <div class="panel panel-default">
        <div class="panel-body">
            <%= simple_form_for @vacation do |f| %>
            	<%= f.input :image, required: true %>
            	<%= f.input :title %>
            	<%= f.input :description %>
            	<%= f.input :total_cost %>
            	<%= f.input :total_people %>
            	<%= f.button :submit %>
            <% end %>
        </div>
  </div>
</div>
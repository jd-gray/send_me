<div class="container">
	<div class="col-md-6">
		<div class="row">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h2 class="text-center">Hello <%= current_user.username %>!</h2>
				</div>

				<div class="panel-body">
					<div class="col-md-12">
						<p class="text-center"><%= image_tag @user.image.url(:medium) if current_user.image.url.present? %></p>
						<p class="text-center"><%= @user.username %></p>
						<p class="text-center"><%= @user.email %></p>
						<%= link_to "Edit Account", edit_user_path, class: "btn btn-primary" %>
						<%= link_to "Delete Account", :user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-md-6">
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="text-center">Posted Vacations</h3>
						</div>
						<div class="panel-body">
							<% @user.vacations.each do |vacation| %>
								<strong><p><%= link_to vacation.title, vacation %></p></strong>
								<p><%= vacation.description %></p>
							<% end %>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-14">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="text-center">Comments</h3>
					</div>
					<div class="panel-body">
						<% @user.comments.each do |comment| %>
							<p><%= comment.body %></p>
						<% end %>
					</div>
				</div>	
			</div>
		</div>
	</div>
</div>
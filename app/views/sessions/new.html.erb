<div class="login col-md-6 col-md-offset-3">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h1>Log In</h1>
		</div>
		<div class="panel-body">
			<%= simple_form_for :login do |f| %>
				<%= f.input :email, placeholder: "Email", required: true %>
				<%= f.input :password, placeholder: "Password", required: true, input_html: { maxlength: 20 } %>
				<%= f.button :submit, 'Log In', class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>
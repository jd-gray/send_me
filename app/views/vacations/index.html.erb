<div class="row">
  <div>
    <ul>
      <% @vacations.each do |vacation| %>
        <li class="col-md-3">
        	<%= link_to (image_tag vacation.image.url(:medium)), vacation, :class => "thumbnail img-responsive "  %> <!--, :class => "thumbnail image-responsive col-md-3" -->
        	<%= link_to vacation.title, vacation %>
        	<%= vacation.user.username %>
        </li> 
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class=" rcol-md-4 col-md-offset-4">
    <%= link_to "Post a vacation", new_vacation_path %>
  </div>
</div>
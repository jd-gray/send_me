<div class="container">
	<div class="col-md-6">
		<div class="row">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h2 class="text-center">Take a break: <%= current_user.username %></h2>
				</div>

				<div class="panel-body">
					<div class="col-md-12">
						<p class="text-center"><%= image_tag @user.image.url(:medium) %></p>
						<p class="text-center"><%= @user.username %></p>
						<p class="text-center"><%= @user.email %></p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-md-6">
		<div class="row">
			<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="text-center">Posted Vacations</h3>
					</div>
					<div class="panel-body">
						<% @user.vacations.each do |vacation| %>
							<strong><p class="text-center"><%= vacation.title %></p></strong>
							<p class="text-center"><%= vacation.description %></p>
						<% end %>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
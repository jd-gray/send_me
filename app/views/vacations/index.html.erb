
<div class="row">
  <div class=" rcol-md-4 col-md-offset-4">
    <%= link_to "Post a vacation", new_vacation_path %>
  </div>
</div>

<div class="container">
  <div id="vacations" class="transitions-enabled centered clearfix masonry">
    <!-- <ul> -->
      <% @vacations.each do |vacation| %>
        <div class="box panel panel-default">
        	<%= link_to (image_tag vacation.image.url(:medium)), vacation %>
          <div class="panel-footer ">
            <%= link_to vacation.title, vacation %>
          	<p><%= vacation.user.username %></p>
          </div>
        </div> 
      <% end %>
    <!-- </ul> -->
  </div>
</div>